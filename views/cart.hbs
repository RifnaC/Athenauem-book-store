    <main class="m-5">
        <div class="container-fluid ">
            <div class="row ">
                <h1 class="text-primary my-5 text-center">Carts</h1>
            </div>
            <div class="row m-0">
                <div class="col">
                    <table class="table table-left fs-5 mx-3">
                        <thead class="table-primary">
                            <tr class="fs-5">
                                <th></th>
                                <th>Item</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Quantity</th>
                                <th class="text-center">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody class="table-danger">
                            {{#each cartItems}}
                            <tr>
                                <td class=" align-middle">
                                    <div class=" d-flex align-items-center justify-content-center fs-2">
                                        <a href="" class="remove"  onclick="return removeItem('{{this._id}}', '{{this.cartItem._id}}')"><i class="bi bi-x-circle"></i></a>
                                    </div>
                                </td>
                                <td>
                                    <div class="product-image d-flex me-3">
                                        <img src="{{this.cartItem.productImg}}" alt="">
                                    </div>
                                    <h5 class="text-dark">{{this.cartItem.bookName}}</h5>
                                </td>
                                <td class="text-center"> &#8377 {{this.cartItem.price}}</td>
                                <td class="text-center">
                                    <div class="qty-container">
                                        <button class="qty-btn-minus btn-primary"
                                            onclick="return changeQty('{{this._id}}', '{{this.cartItem._id}}',-1, -{{this.cartItem.price}})"
                                            type="button" id="decBtn"><i class="fa fa-minus"></i>
                                        </button>
                                        <input type="text" name="qty" value="{{this.quantity}}" class="input-qty" readonly/>
                                        <button class="qty-btn-plus btn-primary"
                                            onclick="return changeQty('{{this._id}}', '{{this.cartItem._id}}',1,  {{this.cartItem.price}})"
                                            type="button"><i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </td>
                                <td class="text-center"> &#8377 {{this.subTotal}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                        <caption>
                            <div class="bg-secondary d-flex CouponSection">
                                <div class="d-flex m-2">
                                    <h4 class="text-dark mx-3 my-1">Coupon: </h4>
                                    <div class="mx-1">
                                        <input type="text" class="form-control inputField">
                                    </div>
                                </div>
                                <div class="d-flex m-2">
                                    <a href="" class="btn btn-primary"> Apply</a>
                                </div>
                            </div>
                        </caption>
                    </table>
                </div>
                <div class="col">
                    <table class="table table-right">
                        <thead class="table-primary fs-5">
                            <tr>
                                <th class="">Cart Total</th>
                                <th></th>
