    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner"
        class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->

    <!-- Header Start -->
    <Header class="container-fluid m-0 p-0">
        <nav class="navbar navbar-expand-lg bg-secondary fixed-top">
            <div class="container-fluid mx-lg-5">
                <a class="navbar-brand " href="/homes">
                    <div class="d-flex justify-content-between align-items-center me-5 pe-5">
                        <img src="/img/logo.jpg" alt="logo"
                            style="width: 40px; height: 40px; border-radius: 50%;">
                        <h3 class="gradient-text"> <span>Atheneuam</span></h3>
                    </div>
                </a>
                <button class="navbar-toggler " type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon py-1"><i class="fa fa-bars"></i></span>
                </button>
                <div class="collapse navbar-collapse d-lg-flex justify-content-lg-between" id="navbarTogglerDemo02">
                    <div class="mx-lg-5 px-lg-5">
                        <ul class="navbar-nav mx-lg-5 me-auto mb-2 mb-lg-0 home-nav ">
                            <li class="nav-item homeNav">
                                <a class="nav-link " href="/homes">Home</a>
                            </li>
                            <li class="nav-item homeNav">
                                <a class="nav-link" href="/shop-page">Shop</a>
                            </li>
                            <li class="nav-item homeNav">
                                <a class="nav-link" href="/category">Category</a>
                            </li>
                            <li class="nav-item homeNav">
                                <a class="nav-link" href="/author">Author</a>
                            </li>
                        </ul>
                    </div>
                    <div>
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 nav-icon">
                            <li class="nav-item homeNav">
                                <form autocomplete="off">
                                    <div class="search-bar-container active">
                                        <img src="https://cdn4.iconfinder.com/data/icons/evil-icons-user-interface/64/magnifier-512.png"
                                            alt="magnifier" class="magnifier" />
                                        <input type="text" class="input" name="searchQuery" placeholder="Search ..."
                                            autocomplete="off">
                                    </div>
                                </form>
                            </li>
                            <li class="nav-item homeNav space">
                                <a class="nav-link" href="cart">
                                    <i class="bi bi-cart3"></i><sup class="total-count fs-5">{{length}}</sup>
                                </a>

                            </li>
                            <li class="nav-item homeNav space">
                                <a class="nav-link" href="wishlist"><i class="bi bi-heart"></i></a>
                            </li>
                            <li class="nav-item space">
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link text-primary" aria-current="page"
                                        data-bs-toggle="dropdown">
                                        <i class="bi bi-person"></i>
                                    </a>
                                </div>

                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </Header>
    <!-- Header End -->
    <main>
        <div class="container-fluid rounded bg-white mt-5 mb-5">
            <div class="row">
                <div class="col-md-3 border-right bg-light">
                    <div class="d-flex  m-5 mb-0">
                        <img class="rounded-circle" width="40px" id="profileImg"
                            src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                        <div class="d-flex flex-column px-3">
                            <p class="text-black-50 fs-5 mb-0">Hello</p>
                            <div class="font-weight-bold fs-5">{{user.name}}</div>
                        </div>
                    </div>
                    <hr>
                    <div class="mx-5">
                        <a href="myOrder" class="dropdown-item fs-5"><i class="bi bi-truck"></i><span class="ps-2">My
                                Orders</span></a>
                    </div>
                    <hr>
                    <div class="mx-5">
                        <a href="profile" class="dropdown-item">
                            <i class="bi bi-person-fill"></i><span class="ps-2">Account
                                Settings</span>
                        </a>
                    </div>
                    <hr>
                    <div class="mx-5">
                        <a href="logout" class="dropdown-item"><i class="bi bi-box-arrow-right"></i>
                            <span class="ps-2">Logout</span>
                        </a>
                    </div>
                </div>
                <div class="col-md-9 border-right">
                    <div class="p-3 pb-0 py-5">
                        {{#each orderDatas}}
                        <div class="cart-item bg-light my-3">
                            <div class="row">
                                <div class="col-md-5 my-auto">
                                    <a href="">
                                        <label class="product-name d-flex">
                                            <img src={{this.itemDetails.productImg}} style="width: 80px; height: 80px"
                                                alt="">
                                            <div class="d-flex flex-column ms-2 my-auto">
                                                <div class="fs-5 text-dark">{{this.itemDetails.bookName}}</div>
                                                <div class="fs-6 text-light">By {{this.itemDetails.author}}</div>
                                            </div>
                                        </label>
                                    </a>
                                </div>
                                <div class="col-md-2 my-auto">
                                    <label class="price d-flex"><span class="me-1"></span>
                                        {{this.quantity}} x &#8377 {{this.itemDetails.price}}</label>
                                </div>
                                <div class="col-md-2 my-auto">
                                    <label class="price d-flex"><span class="me-1"></span>
                                        {{this.order.orderStatus}} </label>
                                </div>
                                <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                    <a href="/order/{{this.order._id}}" class="text-primary"><i
                                            class="bi bi-eye-fill"></i></a>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- footer Section Start -->
    <footer class="footer pt-5 ">
        <div class="container row mx-5 ">
            <a class="my-2" href="home">
                <div class="d-flex me-5 pe-5">
                    <img src="/img/book collection 0.png" alt="logo"
                        style="width: 40px; height: 40px; border-radius: 50%;">
                    <h3 class="gradient-text p-1 px-2"> <span class="pt-5">Atheneuam</span></h3>
                </div>
            </a>
            <div class="footer-col pe-3">
                <h4>Contact Us</h4>
                <ul>
                    <li>
                        1998 Wall Street 707,
                        Washington DC, USA</li>
                    <li>athenauem@domain.com</li>
                    <li>+91 97782458923</li>

                </ul>
            </div>
            <div class="footer-col pe-5">
                <h4>Information</h4>
                <ul>
                    <li><a href="#">Shop</a></li>
                    <li><a href="#">Contact Us</a></li>
                    <li><a href="#">privacy policy</a></li>
                    <li><a href="#">Blogs</a></li>
                </ul>
            </div>
            <div class="footer-col pe-3">
                <h4>My Account</h4>
                <ul>
                    <li><a href="#">Sign In</a></li>
                    <li><a href="#">View Cart</a></li>
                    <li><a href="#">My Wishlist</a></li>
                    <li><a href="#">Help</a></li>
                </ul>
            </div>
            <div class="footer-col ">
                <h4>follow us</h4>
                <div class="social-links">
                    <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#"><i class="fa-brands fa-x-twitter"></i></a>
                    <a href="#"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
        <hr>
        <div class="text-center pt-4">
            <small>&copy; 2023 athenauem.Inc.All rights reserved</small>
        </div>
    </footer>
    <!-- footer Section End -->

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/chart/chart.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://kit.fontawesome.com/3b161c540c.js" crossorigin="anonymous"></script>

    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
    <script src="/js/search.js"></script>

</body>

</html>