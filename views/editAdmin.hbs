        <!-- Spinner End -->


        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-secondary navbar-dark">
                <a href="index" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary">Atheneuam</h3>
                </a>

                <div class="navbar-nav w-100 d-flex ">
                    <div>
                        <a href="index" class="nav-item nav-link "><i class="bi bi-stack"></i>Dashboard</a>

                        <a href="shop" class="nav-item nav-link"><i class="fa fa-th me-2"></i>Shops</a>
