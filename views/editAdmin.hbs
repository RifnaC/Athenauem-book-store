                        </div>
                    </div>
                    <div>
                        <a href="#" class="nav-link" data-bs-toggle="dropdown"><i
                                class="bi bi-box-arrow-right"></i>Logout</a>

                    </div>
                </div>
            </nav>
        </div>
        </nav>
    </div>
    <!-- Sidebar End -->

    <!-- Content Start -->
    <div class="content">
        <!-- Navbar Start -->
        <nav class="navbar navbar-expand bg-secondary navbar-dark  px-4 py-0">
            <div class="navbar-nav align-items-center ms-auto">
                <h5>
                    <a href="#" class="sidebar-toggler flex-shrink-0">
                        <i class="fa fa-bars"></i>
                    </a>
                </h5>

                <div class="nav-item dropdown">
                    <a href="profile" class="nav-link ">
                        <h3><i class=" bi-person text-dark"></i>
                        </h3>
                    </a>
                   
                </div>
            </div>
        </nav>
        <!-- Navbar End -->


        <!-- Button Start -->
        <div class="container-fluid pt-4 px-4 mb-5">
            <div class="bg-secondary border rounded">
                <div class="row no-gutters">
              

                    <div class="col-lg-12 col-xl-12">
                        <div class="profile-content-right profile-right-spacing py-5">
                            <ul class="nav nav-tabs px-0 px-xl-5 nav-style-border" id="myTab" role="tablist">
                                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab"
                                    aria-controls="profile" aria-selected="false">Edit Profile</a>
                            </ul>
                            <div class="tab-content px-3 px-xl-5" id="myTabContent">
                                <div class="tab-pane fade show active" id="profile" role="tabpanel"
                                    aria-labelledby="settings-tab">
                                    <div class="tab-pane-content my-5">
                                        <form method="POST" id="edit_admin" >
                                            <div class="row mb-2">
                                                <div class="form-group">
                                                    <label for="name">Name</label>
                                                     <input type="hidden" name="id" value="{{admin._id}}">
                                                    <input type="text" name="name" class="form-control" id="name" pattern="[a-zA-Z-,]+(\s{0,1}[a-zA-Z-, ])" value="{{admin.name}}">
                                                </div>
                                            </div>
                                            <div class="form-group mb-4">
                                                <label for="email">Email</label>
                                                <input type="email" name="email" class="form-control" id="email" value="{{admin.email}}">
                                            </div>
                                            <a href="changePswd">Reset password</a>                        
                                            <div class="d-flex justify-content-start mt-5">
                                                <a href="admin" class="btn btn-outline-dark mx-3 ">Cancel</a>
                                                <button type="submit" class="btn btn-primary mb-2 btn-pill">Save</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
