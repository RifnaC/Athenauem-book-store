      <h1 class="text-primary mt-4 text-center">Add New Offers</h1>
      <div class="container-fluid pt-4 px-4">
        <div class="bg-secondary border rounded">
          <div class="m-4">
            <form action="coupon" method="POST" id="addCoupon" onsubmit="return offerValidation()">
              <div>
                <div class="form-group m-2">
                  <label for="couponCode" class="text-light m-1">Coupon Code</label>
                  <input type="hidden" name="id" value="">
                  <input type="text" class="form-control" name="couponCode" pattern="[a-zA-Z-,]+(\s{0,1}[a-zA-Z-, ])" value=""
                    placeholder="Coupon Code">
                </div>
                <div class="row ">
                    <div class="form-group col-4 m-1 mx-2">
                  <label for="expireDate" class="text-light m-1">Expires Date</label>
                  <input type="date" class="form-control" name="expireDate" value="" placeholder="Expires Date">
                </div>
                <div class="form-group col-4 m-1">
                  <label for="discount" class="text-light m-1">Discount</label>
                  <input type="Number" class="form-control" name="discount" value="" placeholder="Discount">
                </div>
                </div>
                <div class="form-group my-3">
                  <button type="submit" value="submit" class="btn btn-primary">Save</button>
                </div>
              </div>
            </form>
          </div>
        </div>
