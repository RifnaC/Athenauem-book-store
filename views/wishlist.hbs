    <!-- Header End -->
    <main class="bg-light">
        <div class="py-3 py-md-5 bg-light">
            <div class="container">
                {{#if emptyWishlist}}
                <div class="container text-center" style="margin-top: 100px;">
                    <div class="row ">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12 text-center">
                            <img src="/img/empty-wishlist.png" alt="" class="img-fluid" width="25%">
                            <div class="mt-3">
                                <h4 class="text-primary text-center">Your Wishlist is Empty! </h4>
                                <a href="/shop-page" class="btn btn-outline-dark">Start Shopping</a>
                            </div>
                        </div>
                    </div>
                </div>
                {{else}}
                <div class="text-center  mt-5">
                    <h1 class="text-primary">Wishlist</h1>
                </div>
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="shopping-cart">
                            <div class="cart-header d-none d-md-block d-lg-block d-xl-block">
                                <div class="row bg-primary py-2 ">
                                    <div class="col-md-1">
                                        <h4></h4>
                                    </div>
                                    <div class="col-md-6">
                                        <h4 class="text-white">Products</h4>
                                    </div>
                                    <div class="col-md-2">
                                        <h4 class="text-white">Price</h4>
                                    </div>
                                    <div class="col-md-2">
                                        <h4 class="text-white">Quantity</h4>
                                    </div>
                                </div>
                            </div>
                            {{#each wishlistItems}}
                            <div class="cart-item">
                                <div class="row">
                                    <div class="col-md-1 my-auto fs-5">
                                        <a class="remove ms-4"
                                            onclick="return removeWishlistItem('{{this._id}}', '{{this.wishlistItem._id}}')"><i
                                                class="bi bi-x-circle"></i></a>
                                    </div>
                                    <div class="col-md-6 my-auto">
                                        <a href="">
                                            <label class="product-name">
                                                <img src={{this.wishlistItem.productImg}}
                                                    style="width: 80px; height: 80px" alt="">
                                                <div class="d-flex flex-column mx-1 ">
                                                    <div class="fs-5 text-dark"> {{this.wishlistItem.bookName}}</div>
                                                    <div class="fs-6 text-light">By {{this.wishlistItem.author}}</div>
                                                </div>
                                            </label>
                                        </a>
                                    </div>
                                    <div class="col-md-2 my-auto">
                                        <label class="price">&#8377 {{this.wishlistItem.price}} </label>
                                    </div>
                                    <div class="col-md-2 col-7 my-auto">
                                        <div class="quantity">
                                            <div class="input-group">
                                                <div class="bg-danger text-center text-white px-2 my-2 py-1 "
                                                    id="outOfStock-{{this.wishlistItem._id}}" style="display: none;">Out
                                                    of stock
                                                </div>
                                                
                                                <a href="/carts/{{this.wishlistItem._id}}" onclick='return addToCartAndShowAlert("{{this.wishlistItem._id}}")'>
                                                    <div class="card-button" id="addToCart-{{this.wishlistItem._id}}">
                                                        <b>Add to Cart</b>
                                                    </div>
                                                </a>
                                                <script>
                                                    if ({{ this.wishlistItem.quantity }} == 0 || "{{this.wishlistItem.stock}}" == "Out Of Stock") {
                                                        document.getElementById(`outOfStock-{{this.wishlistItem._id}}`).style.display = 'block';
                                                        document.getElementById(`addToCart-{{this.wishlistItem._id}}`).style.display = 'none';
                                                    }
                                                </script>
                                                <div class="qty-container mx-lg-auto text-dark home-qty"
                                                    id="qty-{{this.wishlistItem._id}}" style="display: none; ">
                                                    <button class="qty-btn-minus btn-primary px-1" type="button"
                                                        id="decBtn" onclick="decrementQuantity('{{this.wishlistItem._id}}')"><i
                                                            class="fa fa-minus"></i>
                                                    </button>
                                                    <input type="text" name="qty" value="1" id="cartQty-{{this.wishlistItem._id}}"
                                                        class=" text-center w-100" readonly />
                                                    <button class="qty-btn-plus btn-primary px-1" type="button"
                                                        onclick="incrementQuantity('{{this.wishlistItem._id}}')"><i
                                                            class="fa fa-plus"></i>
                                                    </button>
                                                </div>
                                                <script>
                                                    if ({{ this.wishlistItem.inCart }}) {
                                                        document.getElementById('addToCart-{{this.wishlistItem._id}}').style.display = 'none';
                                                        document.getElementById('qty-{{this.wishlistItem._id}}').style.display = 'flex';
                                                        document.getElementById('cartQty-{{this.wishlistItem._id}}').value = {{ this.wishlistItem.cartQty }};
                                                    }
                                                </script>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <script>
                                if ({{ this.wishlistItem.quantity }} == 0 || "{{this.wishlistItem.stock}}" == "Out Of Stock") {
                                    document.getElementById(`outOfStock-{{this.wishlistItem._id}}`).style.display = 'block';
                                    document.getElementById("addtocartItems-{{this.wishlistItem._id}}").style.display = 'none';
                                }
                            </script>
                            {{/each}}
                            <div class="py-2 border">
                                <div class="d-flex justify-content-between mx-2">
                                    <a class="btn btn-outline-dark" onclick="return clearWishlist()">Clear</a>
                                    <a class="btn btn-outline-primary" onclick="return addAllToCart()">Add All to
                                        cart</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}}

            </div>
        </div>
    </main>

