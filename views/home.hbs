    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/img/logo.jpg" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap"
        rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/cart.css" rel="stylesheet">
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner"
        class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    <!-- Header Start -->
    <Header class="container-fluid m-0 p-0">
        <nav class="navbar navbar-expand-lg bg-secondary fixed-top">
            <div class="container-fluid mx-lg-5">
                <a class="navbar-brand " href="/homes">
                    <div class="d-flex justify-content-between align-items-center me-5 pe-5">
                        <img src="/img/logo.jpg" alt="logo"
                            style="width: 40px; height: 40px; border-radius: 50%;">
                        <h3 class="gradient-text"><span>Atheneuam</span></h3>
                    </div>
                </a>
                <button class="navbar-toggler " type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon py-1"><i class="fa fa-bars"></i></span>
                </button>
                <div class="collapse navbar-collapse d-lg-flex justify-content-lg-between" id="navbarTogglerDemo02">
                    <div class="mx-lg-5 px-lg-5">
                        <ul class="navbar-nav mx-lg-5 me-auto mb-2 mb-lg-0 home-nav ">
                            <li class="nav-item ">
                                <a class="nav-link active" aria-current="page" href="/homes">Home</a>
                            </li>
                            <li class="nav-item homeNav">
                                <a class="nav-link" href="/shop-page">Shop</a>
                            </li>
                            <li class="nav-item homeNav">
                                <a class="nav-link" href="/category">Category</a>
                            </li>
                            <li class="nav-item homeNav">
                                <a class="nav-link" href="/author">Author</a>
                            </li>
                        </ul>
                    </div>
                    <div>
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 nav-icon">
                            <li>
                                <form autocomplete="off">
                                    <div class="search-bar-container active">
                                        <img src="https://cdn4.iconfinder.com/data/icons/evil-icons-user-interface/64/magnifier-512.png"
                                            alt="magnifier" class="magnifier" />
                                        <input type="text" class="input" name="searchQuery" placeholder="Search ..."
                                            autocomplete="off">
                                    </div>
                                </form>
                            </li>
                            <li class="nav-item homeNav space ">
                                <a class="nav-link" href="/cart">
                                    <i class="bi bi-cart3"></i><sup class="total-count">{{length}}</sup>
                                </a>
                            </li>
                            <li class="nav-item homeNav space ">
                                <a class="nav-link" href="/wishlist"><i class="bi bi-heart"></i></a>
                            </li>
                            <li class="nav-item homeNav space ">
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link" data-bs-toggle="dropdown">
                                        <i class="bi bi-person"></i>
                                        <div class="d-none d-lg-inline-flex text fs-5 display-6 ps-2">{{user}}</div>
                                    </a>
                                    <div
                                        class="dropdown-menu dropdown-menu-end bg-secondary border-0 rounded-0 rounded-bottom m-0">
                                        <a href="/profile" class="dropdown-item">My Profile</a>
                                        <a href="/logout" class="dropdown-item">Log Out</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </Header>
    <!-- Header End -->
    <!-- Banner Section Start -->
    <section>
        <div class="container-fluid position-relative d-flex p-0 mt-5">
            <div class="bgImg row">
                <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {{#each images}}
                        <div class="carousel-item {{#if @first}}active{{/if}}">
                            <div class="bannerText">
                                <h1 class="position-absolute m-5 py-5 bannerHeading text-uppercase">{{this.name}}</h1>
                                <p class="position-absolute m-5 bannerDescription">{{this.description}}</p>
                                <button class="banner-button twenty-one py-1 mx-5 my-5" type="button" id="shopNow"
                                    onclick="return bannerShopNow( '{{this.type}}','{{this.productId}}','{{this.categoryId}}')">
                                    <span class="mx-2 my-5">Shop Now</span>
                                </button>
                            </div>
                            <img src="{{this.bannerImg}}" alt="{{this.name}}">
                        </div>
                        {{/each}}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying"
                        data-bs-slide="prev" id="banner-prev" style="background: none;">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying"
                        data-bs-slide="next" style="background: none;">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </section>
    <!-- Banner Section End -->

    <!-- Category Section Start -->
    <section class="mx-lg-4">
        <div class="m-5">
            <h1 class="text-primary">Featured Category</h1>
            {{#if count}}
            <div class="slider">
                <div id="slide-left-container">
                    <div class="slide-left">
                    </div>
                </div>
                <div id="slide-right-container">
                    <div class="slide-right">
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
        <div class="container mx-4 cardContainer">
            <div id="cards-container">
                <div class="cards row">
                    {{#each category}}
                    <a href="/category?genre={{this.genre}}" class="cardCat col-5">
                        <img src="{{this.categoryImg}}" alt="{{this.genre}} icon">
                        <div class="containerCard ">
                            <h4><b>{{this.genre}}</b></h4>
                        </div>

                    </a>
                    {{/each}}
                </div>
            </div>
            {{#if count}}
            <a id="exploreMoreBtn" class="load-more">Explore More <i class="bi bi-arrow-right"></i></a>
            <a id="exploreLessBtn" class="load-less">Explore Less </a>
            {{/if}}
        </div>
    </section>
    <!-- Category Section End -->

    <!-- product Section Start -->
    <section class="mx-lg-3">
        <div class="container-fluid m-5 me-5">
            <div class="m-0 mb-5">
                <h1 class="text-primary">Popular Books</h1>
            </div>
            <div class="row me-5 pe-4">
                {{#each product}}
                <div class="col col-lg-2 productCard m-3 mb-5">
                    <div class="discount">
                        <div class="discount-text ">
                            <span>{{this.offerPercentage}} %</span>
                        </div>
                    </div>
                    <a href="/productView/{{this._id}}">
                        <img src="{{this.productImg}}" alt="{{this.bookName}}" class="card-img">
                    </a>
                    <div class="card-info">
                        <p class="text-title text-center mb-0">{{this.bookName}} </p>
                        <p class="text-center mb-0">By {{this.author}}</p>
                        <div class="old-price text-center">
                            &#8377 {{this.originalPrice}}
                        </div>
                        <div class="new-price text-center">
                            &#8377 {{this.price}}
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <div class="bg-danger text-center text-white my-2 py-1" id="outOfStock-{{this._id}}" style="display: none; width: 400px">
                            {{this.stock}}
                        </div>
                        <a href="/carts/{{this._id}}" onclick='return addToCartAndShowAlert("{{this._id}}")'>
                            <div class="card-button" id="addToCart-{{this._id}}">
                                <b>Add to Cart</b>
                            </div>
                        </a>
                        <script>
                            if ({{ this.quantity }} == 0 || "{{this.stock}}" == "Out Of Stock") {
                                document.getElementById(`outOfStock-{{this._id}}`).style.display = 'block';
                                document.getElementById("addToCart-{{this._id}}").style.display = 'none';
                            }
                        </script>
                        <div class="qty-container text-dark home-qty" id="qty-{{this._id}}">
                            <button class="qty-btn-minus btn-primary" type="button" id="decBtn"
                                onclick="decrementQuantity('{{this._id}}')"><i class="fa fa-minus"></i>
                            </button>
                            <input type="text" name="qty" value="1" class=" text-center w-100" readonly />
                            <button class="qty-btn-plus btn-primary" type="button"
                                onclick="incrementQuantity('{{this._id}}')"><i class="fa fa-plus"></i>
                            </button>
                        </div>
                        <a href="/wishlist/{{this._id}}" class="wrapper nav-link ms-4">
                            <div class="icon-wishlist"></div>
                        </a>
                    </div>
                </div>
                {{/each}}
                <div class="d-flex justify-content-center">
                    <a href="/shop-page" class="fs-4 fw-bold me-5 pe-5">Explore More <i
                            class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </section>
    <!-- product Section End -->


    <footer class="footer pt-5 ">
        <div class="container row mx-5 ">
            <a class="my-2" href="/home">
                <div class="d-flex me-5 pe-5">
                    <img src="/img/book collection 0.png" alt="logo"
                        style="width: 40px; height: 40px; border-radius: 50%;">
                    <h3 class="gradient-text p-1 px-2"> <span class="pt-5">Atheneuam</span></h3>
                </div>
            </a>
            <div class="footer-col pe-3">
                <h4>Contact Us</h4>
                <ul>
                    <li>
                        1998 Wall Street 707,
                        Washington DC, USA</li>
                    <li>athenauem@domain.com</li>
                    <li>+91 97782458923</li>

                </ul>
            </div>
            <div class="footer-col pe-5">
                <h4>Information</h4>
                <ul>
                    <li><a href="/shop">Shop</a></li>
                    <li><a href="/contact">Contact Us</a></li>
                    <li><a href="/category">Category</a></li>
                    <li><a href="/author">author</a></li>
                </ul>
            </div>
            <div class="footer-col pe-3">
                <h4>My Account</h4>
                <ul>
                    <li><a href="/login">Sign In</a></li>
                    <li><a href="/cart">View Cart</a></li>
                    <li><a href="/wishlist">My Wishlist</a></li>
                    <li><a href="/help">Help</a></li>
                </ul>
            </div>
            <div class="footer-col ">
                <h4>follow us</h4>
                <div class="social-links">
                    <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#"><i class="fa-brands fa-x-twitter"></i></a>
                    <a href="#"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
        <hr>
        <div class="text-center pt-4">
            <small>&copy; 2023 athenauem.Inc.All rights reserved</small>
        </div>
    </footer>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
