        <div class="container-fluid pt-4 px-4">
            <h2 class="text-primary text-center">Edit Books</h2>
            <div class="bg-secondary border rounded">
                <form id="edit_product" enctype="multipart/form-data">
                    <div class="row m-2 ">
                        <input type="hidden" name="id" value="{{book._id}}">
                        <div class="form-group col-lg-6 my-2">
                            <label for="category">Genre</label>
                            <select class="form-select" aria-label="Default select example" name="genre">
                                {{#each category}}
                                <option value="{{this.genre}}">{{this.genre}}</option>
                                {{/each }}
                            </select>
                        </div>
                        <input type="hidden" class="form-control" id="editShopId" name="shopId" value="{{book.shopId}}">
                        <div class="form-group col-lg-6  my-2">
                            <label for="bookName">Book Name</label>
                            <input type="text" class="form-control" id="bookName" name="bookName"
                                value="{{book.bookName}}">
                        </div>
                        <div class="mb-3 col-lg-6 my-2">
                            <label for="productImg">Upload Book Image</label>
                            <input type="file" class="form-control" id="productImg" name="productImg"
                                value="{{book.productImg}}">
                        </div>
                        <div class="form-group col-lg-6  my-2">
                            <label for="Author">Author</label>
                            <input type="text" class="form-control" id="author" name="author" value="{{book.author}}">
                        </div>
                        <div class="form-group col-lg-6 my-2">
                            <label for="quantity">Quantity</label>
                            <select class="form-select" aria-label="Default select example" name="quantity"
                                value="{{book.quantity}}">
                                <option selected>10</option>
                                <option value="20">20</option>
                                <option value="40">40</option>
                                <option value="80">80</option>
                                <option value="160">160</option>
                                <option value="320">320</option>
                                <option value="640">640</option>
                                <option value="1280">1280</option>
                            </select>
                        </div>
                        <div class="mb-3 ">
                            <label for="description" class="form-label">Book Description</label>
                            <textarea class="form-control" id="description" rows="3" name="description"
                                value="{{book.description}}"></textarea>
                        </div>
                        <div class="form-group col-lg-6  my-2">
                            <label for="originalPrice">Original Price</label>
                            <input type="number" class="form-control" id="originalPrice" value="{{book.originalPrice}}"
                                name="originalPrice">
                        </div>
                        <div class="form-group col-lg-6  my-2">
                            <label for="price">Discount</label>
                            <input type="number" class="form-control" id="discount" value="{{book.discount}}"
                                name="discount">
                        </div>
                        <div class="form-group col-lg-6  my-2">
                            <label for="price">Selling Price</label>
                            <input type="number" class="form-control" id="price" value="{{book.price}}" name="price">
                        </div>
                        <div class="d-flex col-lg-6 mt-5 pt-2">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="stock" id="inStock" value="In Stock">
                                <label class="form-check-label stockRadioBtn" for="In Stock">Available</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="stock" id="outOfStock"
                                    value="Out Of Stock">
                                <label class="form-check-label stockRadioBtn" for="Out of Stock">Out Of Stock</label>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mb-3">
                        <a href="products" class="btn btn-4 btn-outline-dark mx-3 ">Cancel</a>
                        <button class="btn btn-4 btn-primary">save</button>
                    </div>
                </form>
            </div>
